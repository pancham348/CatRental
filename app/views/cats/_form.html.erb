<% action_url = @cat.persisted? ? cat_url(@cat) : cats_url%>
<% method = @cat.persisted? ? "PATCH" : "POST" %>
<% submit_text = @cat.persisted? ? "Update Cat!" : "Create Cat!" %>

<form action="<%= action_url%>" method="POST">
  <input type= "hidden" name= "_method" value="<%method%>">
  
  <label for="cat_name">Name</label>
  <input name="cat[name]" id="cat_name", type="text", value="<%=@cat.name%>">
  <br>
  
  <label for="cat_birth_date">Birth Date</label>
  <input name="cat[birth_date]", type="date", max = "<%=Date.current%>", value="<%=@cat.birth_date%>">
  <br>
  
  <label>Sex</label>
  <div>
    <input name="cat[sex]" id="cat_sex_m" type="radio" value="M" checked= "<%=@cat.sex == 'M'%>">
    <label for="cat_sex_m">Male</label>
    <input name="cat[sex]" id="cat_sex_f" type="radio" value="F" checked="<%= @cat.sex == 'F'%>">
    <label for="cat_sex_f">Female</label>
  </div>
  <br>
  
  <label for="cat_description">Description</label>
  <textarea name="cat[description]" id="cat_description", value="<%=@cat.description%>"><%=@cat.description%></textarea>
  <br>
  
  <label for="cat_color">color</label>
  <select name="cat[color]">
    <option value =" "> </option>
    <option value="<%=@cat.color%>" selected> <%=@cat.color%> </option>
    <option value="brown">Brown</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="orange">Orange</option>
    <option value="yellow">Yellow</option> 
  </select>
  <br>
    
 <input type="submit" value="<%=submit_text%>">
</form>